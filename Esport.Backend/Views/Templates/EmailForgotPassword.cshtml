@model Esport.Backend.Entities.User
@{
  Layout = "_EmailLayout";
  ViewData["Title"] = $"Hourplanner - Change password";

}
<table style="border:0px;padding:0;border-spacing: 0; border-collapse: collapse;width:100%;">
	<tr>
		<td style="color: #000; font-family: Arial, sans-serif; font-size: 24px;">
			Hi @Model.FirstName,
		</td>
	</tr>
	<tr>
		<td style="padding: 20px 0 30px 0; color: #000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
			You have asked for a new password.
		</td>
	</tr>
	<tr>
		<td>
			<table style="border:0px;padding:0;border-spacing: 0; border-collapse: collapse;width:100%;">
				<tr>
					<td>
						<p>To change password <a href="https://www.hourplanner.com/change-password/@Model.PasswordResetToken">Click here</a>.</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>