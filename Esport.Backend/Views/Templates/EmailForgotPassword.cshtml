@model Esport.Backend.Entities.AuthUser
@{
  Layout = "_EmailLayout";
  ViewData["Title"] = $"p1s - skift password";

}
<table style="border:0px;padding:0;border-spacing: 0; border-collapse: collapse;width:100%;">
	<tr>
		<td style="color: #000; font-family: Arial, sans-serif; font-size: 24px;">
			Hej @Model.FirstName,
		</td>
	</tr>
	<tr>
		<td style="padding: 20px 0 30px 0; color: #000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
			Du har bedt om at skifte password.
		</td>
	</tr>
	<tr>
		<td>
			<table style="border:0px;padding:0;border-spacing: 0; border-collapse: collapse;width:100%;">
				<tr>
					<td>
						<p>For at skifte password <a href="https://p1s.dk/change-password/@Model.PasswordResetToken">Klik her</a>.</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>