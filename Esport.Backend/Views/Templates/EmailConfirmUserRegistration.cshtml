@model Esport.Backend.Entities.AuthUser
@{
  Layout = "_EmailLayout";
  ViewData["Title"] = $"p1s - Bekræft brugeroprettelse";

}
<table style="border:0px;padding:0;border-spacing: 0; border-collapse: collapse;width:100%;">
	<tr>
		<td style="color: #000; font-family: Arial, sans-serif; font-size: 24px;">
			Heh @Model.Username,
		</td>
	</tr>
	<tr>
		<td style="padding: 20px 0 30px 0; color: #000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
			Du har registreret en ny bruger. Vi skal i den forbindelse bede dig om at bekræfte din email.
		</td>
	</tr>
	<tr>
		<td>
			<table style="border:0px;padding:0;border-spacing: 0; border-collapse: collapse;width:100%;">
				<tr>
					<td>
						<p>For at bekræfte din email <a href="https://p1s.dk/activate-user/@Model.ActivateAccountToken">Klik her</a>.</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>